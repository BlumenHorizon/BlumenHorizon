[Unit]
Description=Gunicorn instance to serve BlumenHorizon application in Monaco
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/var/www/blumenhorizon_monaco
ExecStart=/var/www/blumenhorizon_monaco/.venv/bin/gunicorn -c gunicorn.conf.py

[Install]
WantedBy=multi-user.target

